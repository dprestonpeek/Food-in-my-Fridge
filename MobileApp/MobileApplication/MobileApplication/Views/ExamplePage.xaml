<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.ExamplePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Image HorizontalOptions="CenterAndExpand" Source="https://prestonpeek.weebly.com/uploads/2/2/4/9/22497912/foodinmyfridge_orig.png"></Image>
            
            <Button x:Name="AboutButton" Text="Navigate to the About page" Clicked="AboutButton_Clicked"/>
            <Button x:Name="HomeButton" Text="Back to Inventory" Clicked="HomeButton_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>