<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.Views.ShoppingList"
             Title="Shopping List">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout x:Name="ChooseShoppingList">
                    <Button Text="My Shopping List" Clicked="OpenMyShoppingList"></Button>
                    <Button Text="Other User's Shopping List" Clicked="SpecifyUserShoppingList"></Button>
                </StackLayout>
                <StackLayout x:Name="userShoppingList">

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>