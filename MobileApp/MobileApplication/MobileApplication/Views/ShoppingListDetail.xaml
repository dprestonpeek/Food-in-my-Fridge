<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.Views.ShoppingListDetail">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image x:Name="shoppingListImage"
                       Source="ImageSource"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand"
                       />
                <Label x:Name="shoppingListName"
                    Text="Recipe Label"
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" 
                    FontSize="24"/>
                <Label x:Name="shoppingListDescription"
                    Text="Retrieved From: "
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" 
                    FontSize="18"/>
                <Label x:Name="shoppingListQuanity"
                    Text="Servings: "
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" 
                    FontSize="18"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>