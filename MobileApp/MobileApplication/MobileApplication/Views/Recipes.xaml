             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApplication.Views.Recipes">
  <ContentPage.Content>
      <StackLayout>
          <!--Label Text="Hello Xamarin.Forms!" /-->
          
          <Entry Placeholder="item" x:Name="item"/>

          <Button x:Name="searchbtn" Text="Search for Recipes" Clicked="searchBtn_Clicked"/>

          <Label Text="Recipe Options:" />

            <!--Label Text="NAME" />-->
            <Label x:Name="recipeName" Text="" />
