            <Label x:Name="recipeDesc" Text="" />
            <Label x:Name="recipeUrl" Text=""/>
            <Image x:Name="recipeImg" HorizontalOptions="CenterAndExpand" Source=""></Image>
            <Label x:Name="ingr" Text=""/>

            <!-- Button x:Name="openlinkBtn" Text="Click to Open Link" Clicked="openlinkBtn_Clicked"/ -->

            <Button x:Name="suggestBtn" Text="Suggest Recipes Based on Inventory" Clicked="suggestBtn_Clicked"/>

        </StackLayout>
  </ContentPage.Content>
